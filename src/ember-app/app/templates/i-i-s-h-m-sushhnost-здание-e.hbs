<h3 class="ui header">{{t "forms.i-i-s-h-m-sushhnost-здание-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.id
      class=(if (v-get validationModel "id" "isInvalid") "error")
      label=(t "forms.i-i-s-h-m-sushhnost-здание-e.id-caption")
      data-test-i-i-s-h-m-sushhnost-здание-e-id=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "id" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.name
      class=(if (v-get validationModel "name" "isInvalid") "error")
      label=(t "forms.i-i-s-h-m-sushhnost-здание-e.name-caption")
      data-test-i-i-s-h-m-sushhnost-здание-e-name=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "name" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-h-m-sushhnost-здание-e.человек-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.человек
      displayAttributeName="id"
      autocomplete=true
      relationName="человек"
      projection="ЧеловекL"
      title=(t "forms.i-i-s-h-m-sushhnost-здание-e.человек-caption")
      readonly=readonly
      componentName="человекLookup"
      class=(if (v-get validationModel "человек" "isInvalid") "error")
      data-test-i-i-s-h-m-sushhnost-здание-e-человек=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "человек" "message")}}
  </div>
</form>
